/dts-v1/;

#include <dt-bindings/leds/common.h>
#include <dt-bindings/input/input.h>
#include "meson-gxl-s905x-p212.dtsi"

/ {
	compatible = "amlogic,p212", "amlogic,s905x", "amlogic,meson-gxl";
	model = "CumeBox";

	hdmi-connector {
		compatible = "hdmi-connector";
		type = "a";

		port {
			hdmi_connector_in: endpoint {
				remote-endpoint = <&hdmi_tx_tmds_out>;
			};
		};
	};

	otg_5v: regulator-hdmi-5v {
		compatible = "regulator-fixed";

		regulator-name = "OTG_5V";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;

		gpio = <&gpio GPIOH_5 GPIO_ACTIVE_HIGH>;
		enable-active-high;
		regulator-always-on;
	};

	leds {
		compatible = "gpio-leds";

		/*
			purple: red + blue
			yellow: red + green
			white:  red + green + blue
		*/
		led-blue {
			label = "blue";
			color = <LED_COLOR_ID_BLUE>;
			function = LED_FUNCTION_STATUS;
			gpios = <&gpio GPIODV_24 GPIO_ACTIVE_HIGH>; // 73
			linux,default-trigger = "timer";
		};

		led-red {
			label = "red";
			color = <LED_COLOR_ID_RED>;
			function = LED_FUNCTION_DISK_ACTIVITY;
			gpios = <&gpio GPIODV_26 GPIO_ACTIVE_HIGH>; // 75
			panic-indicator;
		};

		led-green {
			label = "green";
			color = <LED_COLOR_ID_GREEN>;
			function = LED_FUNCTION_DISK_ACTIVITY;
			gpios = <&gpio GPIODV_27 GPIO_ACTIVE_HIGH>; // 76
			//linux,default-trigger = "heartbeat";
		};
	};

	gpio_fan: gpio-fan {
		#cooling-cells = <2>;
		compatible = "gpio-fan";
		gpio-fan,speed-map = <0 0 4500 1>;
		gpios = <&gpio_ao GPIOAO_3 GPIO_ACTIVE_HIGH>;
		status = "okay";
	};
	gpio-keys-polled {
		compatible = "gpio-keys-polled";
		poll-interval = <100>;

		power-button {
			label = "power";
			linux,code = <KEY_POWER>;
			gpios = <&gpio_ao GPIOAO_2 GPIO_ACTIVE_LOW>;
		};
/*
		reset-button {
			label = "reset";
			linux,code = <KEY_POWER>;
			gpios = <&gpio_ao GPIOAO_9 GPIO_ACTIVE_LOW>;
		};
		ap-button {
			label = "ap";
			linux,code = <KEY_POWER>;
			gpios = <&gpio_ao GPIOAO_6 GPIO_ACTIVE_LOW>;
		};
*/
	};

};


