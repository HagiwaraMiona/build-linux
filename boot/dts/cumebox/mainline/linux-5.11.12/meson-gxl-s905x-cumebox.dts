&i2c_AO {
	status = "okay";
        pinctrl-0 = <&i2c_ao_pins>;
        pinctrl-names = "default";
	clock-frequency = < 400000 >;

	ssd1306: oled@3c {
		status = "disabled";
		compatible = "solomon,ssd1306fb-i2c";
		reg = < 0x3c >;
		solomon,width = < 128 >;
		solomon,height = < 64 >;
		solomon,page-offset = < 0 >;
		solomon,com-invdir;
		//reset-gpios = <&gpio_ao GPIOAO_3 GPIO_ACTIVE_HIGH>;
	};
};
