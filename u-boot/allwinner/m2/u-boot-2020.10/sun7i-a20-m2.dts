};

&cpu0 {
	operating-points = <
	/* kHz	  uV */
	1080000	1450000
	912000	1400000
	864000	1300000
	792000	1250000
	720000	1200000
	624000	1150000
	528000	1100000
	312000	1050000
	>;
};

&cpu1 {
	operating-points = <
	/* kHz	  uV */
	1080000	1450000
	912000	1400000
	864000	1300000
	792000	1250000
	720000	1200000
	624000	1150000
	528000	1100000
	312000	1050000
	>;
};

&ahci {
	target-supply = <&reg_ahci_5v>;
	status = "okay";
};

&de {
	status = "okay";
};

&codec {
	allwinner,pa = <&pio 7 25 GPIO_ACTIVE_HIGH>;
	allwinner,pa-gpios = <&pio 7 25 GPIO_ACTIVE_HIGH>;
	status = "okay";
};

&ehci0 {
	status = "okay";
};

&ehci1 {
	status = "okay";
};

&otg_sram {
	status = "okay";
};

&gmac {
	pinctrl-names = "default";
	pinctrl-0 = <&gmac_mii_pins>;
	phy = <&phy1>;
	phy-mode = "mii";
	status = "okay";
};

&gmac {
        phy1: ethernet-phy@1 {
                reg = <1>;
        };
};

&hdmi {
	status = "okay";
};

&hdmi_out {
	hdmi_out_con: endpoint {
		remote-endpoint = <&hdmi_con_in>;
	};
};

/* I2C
* NO: SCL,	SDA
*  0: PB00, PB01
*  1: PB18, PB19
*  2: PB20, PB21
*  3: PI00, PI01
*  4: PI02, PI03
*/

&pio {
	/omit-if-no-ref/
	i2c4_pins: i2c4-pins {
		pins = "PI2", "PI3";
		function = "i2c4";
	};
};

&i2c0 {
	status = "okay";

	axp209: pmic@34 {
		compatible = "x-powers,axp209";
		reg = <0x34>;
		interrupt-parent = <&nmi_intc>;
		interrupts = <0 IRQ_TYPE_LEVEL_LOW>;

		interrupt-controller;
		#interrupt-cells = <1>;
	};
};

&i2c1 {
	status = "okay";
};

// touch screen
&i2c2 {
	status = "okay";
};

